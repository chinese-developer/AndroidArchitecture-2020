<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

    <declare-styleable name="CounterButton">
        <attr name="ccb_count" format="integer"/>
        <attr name="ccb_text" format="string|reference"/>
        <attr name="ccb_text_hint_format" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="TopBarLayout">
        <attr name="tb_title" format="string|reference"/>
        <attr name="tb_navigation_icon" format="reference"/>
        <attr name="tb_menu_id" format="reference"/>
        <attr name="tb_show_cutting_line" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="trimExpandedText" format="string"/>
        <attr name="trimCollapsedText" format="string"/>
        <attr name="trimLength" format="integer"/>
        <attr name="showTrimExpandedText" format="boolean"/>
        <attr name="colorClickableText" format="color"/>
        <attr name="trimLines" format="integer"/>
        <attr name="trimMode">
            <enum name="trimModeLine" value="0"/>
            <enum name="trimModeLength" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FixDragLayout">
        <attr name="android:orientation" />
    </declare-styleable>

</resources>