<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingStart="@dimen/dp_39"
    android:paddingEnd="@dimen/dp_39">

    <View
        android:id="@id/hot_game_close"
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:background="@mipmap/hot_game_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/tv_hot_game_change_batch_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_1"
        android:text="换一批"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/hot_game_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hot_game_close" />

    <ImageView
        android:id="@id/hot_game_change_batch_image"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_28"
        android:paddingStart="@dimen/dp_41"
        android:paddingTop="@dimen/dp_4"
        android:paddingEnd="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        android:src="@mipmap/hot_game_change_batch"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/hot_game_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hot_game_close" />

    <View
        android:id="@id/hot_game_image_background"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_3"
        android:background="@drawable/bg_ffffff_r8"
        app:layout_constraintDimensionRatio="295:412"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hot_game_close" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_ffffff_left_r8"
        android:gravity="center"
        android:paddingStart="@dimen/dp_12"
        android:paddingEnd="@dimen/dp_6"
        android:text="重要提醒"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_10"
        app:layout_constraintEnd_toEndOf="@id/hot_game_image_background"
        app:layout_constraintTop_toTopOf="@id/hot_game_image_background" />

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_44"
        android:layout_marginEnd="@dimen/dp_18"
        android:background="@mipmap/icon_top_bg"
        app:layout_constraintDimensionRatio="259:83"
        app:layout_constraintEnd_toEndOf="@id/hot_game_image_background"
        app:layout_constraintStart_toStartOf="@id/hot_game_image_background"
        app:layout_constraintTop_toTopOf="@id/hot_game_image_background" />

    <TextView
        android:id="@id/text_tip"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_142"
        android:text="1.通过亚博图标上的网址,重新下载App："
        android:textColor="#66000000"
        android:textSize="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="@id/tip_pic"
        app:layout_constraintStart_toStartOf="@id/tip_pic"
        app:layout_constraintTop_toTopOf="@id/hot_game_image_background" />

    <View
        android:id="@id/tip_pic"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_23"
        android:background="@mipmap/image_wwww"
        app:layout_constraintDimensionRatio="249:94"
        app:layout_constraintEnd_toEndOf="@id/hot_game_image_background"
        app:layout_constraintStart_toStartOf="@id/hot_game_image_background"
        app:layout_constraintTop_toBottomOf="@id/text_tip" />

    <TextView
        android:id="@id/text_tip1"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="2.收藏亚博永久网址,浏览器打开,随时畅玩:"
        android:textColor="#66000000"
        android:textSize="@dimen/dp_12"
        app:layout_constraintEnd_toEndOf="@id/boom_view"
        app:layout_constraintStart_toStartOf="@id/boom_view"
        app:layout_constraintTop_toBottomOf="@id/tip_pic" />

    <LinearLayout
        android:id="@id/boom_view"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_23"
        android:background="@drawable/bg_f7f7f7_r8"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="249:99"
        app:layout_constraintEnd_toEndOf="@id/hot_game_image_background"
        app:layout_constraintStart_toStartOf="@id/hot_game_image_background"
        app:layout_constraintTop_toBottomOf="@id/text_tip1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/ll_domian1"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/domain_shape_pic">

            <ImageView
                android:id="@id/iv_tital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@mipmap/icon_search_414655"
                android:textSize="@dimen/dp_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@id/text_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:fontFamily="@font/dinpro"
                android:maxLength="16"
                android:maxLines="1"
                android:text="www.yabo.com"
                android:textColor="@color/color_text1"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/ll_domian2"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/domain_shape_pic">

            <ImageView
                android:id="@id/iv_tital2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@mipmap/icon_search_414655"
                android:textSize="@dimen/dp_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@id/text_domain2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:fontFamily="@font/dinpro"
                android:maxLength="16"
                android:maxLines="1"
                android:text="www.yabo.com"
                android:textColor="@color/color_text1"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/ll_domian3"
            android:layout_width="@dimen/dp_180"
            android:layout_height="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@drawable/domain_shape_pic">

            <ImageView
                android:id="@id/iv_tital3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@mipmap/icon_search_414655"
                android:textSize="@dimen/dp_13"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@id/text_domain3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:fontFamily="@font/dinpro"
                android:maxLength="16"
                android:maxLines="1"
                android:text="www.yabo.com"
                android:textColor="@color/color_text1"
                android:textSize="@dimen/dp_14"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>