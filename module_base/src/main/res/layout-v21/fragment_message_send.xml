<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/title_feedback_14sp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/color_f8f8f8"
        android:fadingEdge="none"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@id/tvSendMessageTitleTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:text="问题类型"
                android:textColor="@color/color_text1"
                android:textSize="@dimen/dp_14" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@id/cl_choice_type"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white">

                <ImageView
                    android:id="@id/iv_icon"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_marginStart="@dimen/dp_14"
                    android:src="@mipmap/icon_problem_holder"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:hint="请选择问题类型"
                    android:textColor="@color/color_text1"
                    android:textColorHint="@color/color_a5a9b3"
                    android:textSize="@dimen/dp_14"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/iv_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@id/iv_change_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:paddingStart="@dimen/dp_28"
                    android:src="@mipmap/icon_choice_more"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="问题描述"
                    android:textColor="@color/color_text1"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="（内容介于20～200字）"
                    android:textColor="@color/color_text2"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>

            <EditText
                android:id="@id/etContent"
                style="@style/mine_rl_style0"
                android:layout_height="@dimen/dp_239"
                android:background="@color/color_ffffff"
                android:fontFamily="@font/dinpro"
                android:gravity="center|left|top"
                android:hint="请详细描述您遇到的问题，填写内容不少于20字。"
                android:lineSpacingExtra="8.0sp"
                android:minHeight="@dimen/dp_150"
                android:minLines="5"
                android:paddingLeft="@dimen/dp_14"
                android:paddingTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_14"
                android:scrollbars="vertical"
                android:textColor="@color/color_text1"
                android:textColorHint="@color/color_text2"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@id/text_num"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:gravity="right"
                android:paddingEnd="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_10"
                android:text="0/200"
                android:textColor="@color/color_text2"
                android:textSize="@dimen/dp_12" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_117"
                android:background="@color/white"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/color_f8f8f8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@id/gv_pics"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_67"
                    android:layout_marginTop="@dimen/dp_10"
                    android:choiceMode="singleChoice"
                    android:divider="@null"
                    android:fadingEdge="none"
                    android:listSelector="@android:color/transparent"
                    android:overScrollMode="never"
                    android:scrollbarStyle="outsideOverlay"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:spanCount="4" />

                <TextView
                    android:id="@id/tv_size_indicate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:text="0/3"
                    android:textColor="@color/color_text2"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:fontFamily="@font/dinpro"
                    android:text="* 文件格式为png、jpg、jpeg，且大小不超过15MB"
                    android:textColor="@color/color_text2"
                    android:textSize="@dimen/dp_12"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@id/btnSubmit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginBottom="@dimen/dp_37"
                android:background="@drawable/btn_feedback_submit_disable"
                android:enabled="true"
                android:stateListAnimator="@null"
                android:text="@string/email_submit"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/dp_16" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>