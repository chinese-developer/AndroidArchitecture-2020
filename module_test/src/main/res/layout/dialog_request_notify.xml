<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_all_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/sp_2"
        android:text="开启推送通知"
        android:textColor="@color/color_text1"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/dp_23"
        android:layout_marginEnd="@dimen/dp_23"
        android:layout_marginBottom="@dimen/dp_10"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/sp_6"
        android:text="打开系统通知，及时获取平台最新优惠活动信息！"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/sp_14" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/animation_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_200"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        app:lottie_autoPlay="true"
        app:lottie_fileName="data.json"
        app:lottie_loop="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginTop="@dimen/dp_13"
        android:background="@color/color_EEEEEE" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@id/btn_request_notify_cancel"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="下次再说"
            android:textColor="@color/color_text1"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:background="@color/color_EEEEEE" />

        <TextView
            android:id="@id/btn_request_notify_confirm"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_weight="1.0"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/sp_2"
            android:text="立即开启"
            android:textColor="@color/color_d2b79c"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>
</LinearLayout>