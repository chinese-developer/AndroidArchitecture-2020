<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

    <style name="TextAppearance" />
    <attr format="reference" name="iconColor"/>
    <style name="Widget.Base" parent="android:Widget" />
    <style name="UI" parent="android:TextAppearance.Holo" />

    <style name="UI.TextAppearance">
        <item name="android:textColor">@color/text_808080</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHighlight">@color/color_text_high_light_pressed</item>
        <item name="android:fontFamily">@font/dinpro</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <style name="UI.TextAppearance.Bold">
        <item name="android:fontFamily">@font/dinpro_bold</item>
    </style>

</resources>