<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

    <style name="TextAppearance" />

    <style name="Widget.DaMi" parent="android:Widget" />

    <style name="Widget.DaMi.LayoutStatus">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/color_button_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/common_edge_big</item>
        <item name="android:layout_marginEnd">@dimen/common_edge_big</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:foreground">@drawable/ripple_corners_primary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:stateListAnimator" tools:ignore="NewApi">@null</item>
    </style>

    <style name="Widget.DaMi.TextEntry" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/acc_surface_contrast</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.DaMi.TextEntry</item>
    </style>

    <style name="ThemeOverlay.DaMi.TextEntry" parent="@style/ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorPrimary">?attr/colorSecondary</item>
    </style>


    <style name="Widget.DaMi.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/z_app_bar</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="Widget.DaMi.PrimaryToolbar" parent="Widget.DaMi.Toolbar.SmallCapsTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:elevation">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="Widget.DaMi.Toolbar.SmallCapsTitle">
        <item name="android:titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>
    </style>

    <style name="TextAppearance.ToolbarTitleSmallCaps" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFeatureSettings">smcp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="UI" parent="android:TextAppearance.Holo" />

    <style name="UI.TextAppearance">
        <item name="android:textColor">#BBBBBB</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHighlight">@color/color_text_high_light_pressed</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:fontFeatureSettings">smcp, onum</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="UI.TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>