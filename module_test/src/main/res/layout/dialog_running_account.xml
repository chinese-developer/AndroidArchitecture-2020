<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginEnd="@dimen/dp_45"
        android:background="@drawable/bg_corners10_ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@id/tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="center"
            android:text="@string/warn_tip"
            android:textColor="@color/color_414655"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您取款所需流水："
                android:textColor="@color/color_a5a9b3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@id/tv_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000.00"
                android:textColor="@color/color_a5a9b3"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_2"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您当前的流水为："
                android:textColor="@color/color_a5a9b3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@id/tv_current"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000.00"
                android:textColor="@color/color_a5a9b3"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="您还需要流水："
                android:textColor="@color/color_a5a9b3"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@id/tv_need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2000.00"
                android:textColor="@color/color_db6372"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="发起提款可能会导致您提款失败，是否继续？"
            android:textColor="@color/color_a5a9b3"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="*获取游戏场馆流水可能存在一定延迟，如确认当前流水达到所需流水，请点击继续提交订单!"
            android:textColor="@color/color_cbced8"
            android:textSize="@dimen/dp_10" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@id/tv_no"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="取消"
                android:textColor="@color/color_414655"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="fill_parent"
                android:background="@color/color_eeeeee" />

            <TextView
                android:id="@id/tv_yes"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:text="继续"
                android:textColor="@color/color_d2b79c"
                android:textSize="@dimen/dp_18" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>