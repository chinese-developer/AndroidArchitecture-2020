<resources>
    <style name="SearchViewTheme" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlActivated">?android:colorAccent</item>
        <item name="android:searchViewStyle">@style/Widget.DaMi.SearchView</item>
    </style>

    <style name="Widget.DaMi.SearchView" parent="android:style/Widget.Material.SearchView">
        <item name="android:searchIcon">@android:color/transparent</item>
        <item name="android:searchHintIcon">@android:color/transparent</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:submitBackground">@android:color/transparent</item>
    </style>

    <style name="Widget.DaMi.SongerView">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">195dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_level1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.DaMi.TabTextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_212121</item>
    </style>

    <style name="TextApperance.Artist.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textSize">29sp</item>
    </style>
</resources>