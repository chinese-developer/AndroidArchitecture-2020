<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="item"
            type="com.example.architecture.home.ui.model.home.AlbumModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/common_container_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_normal"
        android:paddingEnd="@dimen/padding_normal"
        android:paddingBottom="@dimen/spacing_micro">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_marginTop="@dimen/spacing_micro"
            android:placeholderRes="@{item.coverImgResource}"
            android:scaleType="fitXY"
            android:src="@{item.coverImgUrl}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription"
            tools:src="@color/blue_200" />

        <TextView
            android:id="@+id/album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_normal"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="@{item.name}"
            android:textColor="#686868"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@+id/album_cover"
            app:layout_constraintRight_toRightOf="@+id/album_cover"
            app:layout_constraintTop_toBottomOf="@+id/album_cover"
            tools:text="Rap God" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>