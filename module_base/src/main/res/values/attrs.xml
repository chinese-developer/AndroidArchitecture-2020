<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingDefaultResource">

    <declare-styleable name="CounterButton">
        <attr name="ccb_count" format="integer"/>
        <attr name="ccb_text" format="string|reference"/>
        <attr name="ccb_text_hint_format" format="string|reference"/>
    </declare-styleable>

    <declare-styleable name="TopBarLayout">
        <attr name="tb_title" format="string|reference"/>
        <attr name="tb_navigation_icon" format="reference"/>
        <attr name="tb_menu_id" format="reference"/>
        <attr name="tb_show_cutting_line" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="ReadMoreTextView">
        <attr name="trimExpandedText" format="string"/>
        <attr name="trimCollapsedText" format="string"/>
        <attr name="trimLength" format="integer"/>
        <attr name="showTrimExpandedText" format="boolean"/>
        <attr name="colorClickableText" format="color"/>
        <attr name="trimLines" format="integer"/>
        <attr name="trimMode">
            <enum name="trimModeLine" value="0"/>
            <enum name="trimModeLength" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="FixDragLayout">
        <attr name="android:orientation" />
    </declare-styleable>

    <declare-styleable name="ShadowLayout">
        <attr name="sl_cornerRadius" format="dimension"/>
        <attr name="sl_shadowRadius" format="dimension"/>
        <attr name="sl_shadowColor" format="color"/>
        <attr name="sl_dx" format="dimension"/>
        <attr name="sl_dy" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="BaselineGridTextView">
        <attr name="lineHeightMultiplierHint" format="float" />
        <attr name="lineHeightHint" format="dimension" />
        <attr name="maxLinesByHeight" format="boolean" />
        <attr name="android:textAppearance" />
        <attr name="android:fontFamily" />
    </declare-styleable>

    <declare-styleable name="ArchRoundedImageView">
        <attr name="arch_riv_corner_radius" format="dimension" />
        <attr name="arch_riv_corner_radius_top_left" format="dimension" />
        <attr name="arch_riv_corner_radius_top_right" format="dimension" />
        <attr name="arch_riv_corner_radius_bottom_left" format="dimension" />
        <attr name="arch_riv_corner_radius_bottom_right" format="dimension" />
        <attr name="arch_riv_border_width" format="dimension" />
        <attr name="arch_riv_border_color" format="color" />
        <attr name="arch_riv_mutate_background" format="boolean" />
        <attr name="arch_riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="arch_riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="arch_riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="arch_riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ArchMarqueeView">
        <attr name="arch_marquee_repeat_type" format="enum">
            <enum name="repeat_once_time" value="0"/><!-- 播放一次 -->
            <enum name="repeat_interval" value="1"/>  <!--连续播放 循环结束再继续下次循环-->
            <enum name="repeat_continuous" value="2"/>  <!--连续播放 到末尾直接继续下次循环-->
        </attr>
        <attr name="arch_marquee_text_distance" format="integer"/>
        <attr name="arch_marquee_text_startlocationdistance" format="float"/>
        <attr name="arch_marquee_text_speed" format="float"/>
        <attr name="arch_marquee_text_color" format="color|reference"/>
        <attr name="arch_marquee_text_size" format="float"/>
        <attr name="arch_marquee_is_clickable_stop" format="boolean"/>
        <attr name="arch_marquee_is_reset_location" format="boolean"/>
    </declare-styleable>


</resources>